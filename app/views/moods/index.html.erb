<div class="container mt-5 text-center">
<h1>Mood progress</h1>
<%= month_calendar(attribute: :date, events: @moods) do |date,moods| %>
<div class="calendar">
  <%= date.day %>
  <% if moods.present? %>
    <p> <%= moods.first["emotion"].split(" ").first %> </p>
  <% end %>
  </div>
<% end %>
</div>


<%# Mood is an array of hashes that's why moods.first["emotion"]%>
<%# Now we used moods.first["emotion"].split(" ").first to retieve the emoji only%>
