<div class="form-body">
  <div class="row justify-content-center">
      <div class="mb-3 col text-center">
        <%= simple_form_for @mood do |f|%>
        <%= f.input :emotion, collection: [['😁 Joyful', '😁 '], ['🙂 Happy', ' 🙂 '], ['😐 Numb', ' 😐 '], ['😨 Scared', ' 😨 '], ['😭 Sad', ' 😭 '], ['😡 Angry', ' 😡 ']], label_method: :second, value_method: :first, as: :radio_buttons, input_html: { class: "emotion-selector" }, item_wrapper_class: 'emotion-item', legend_tag: false %>
      </div>
    </div>
  </div>
      <div class="form-footer">
        <%= f.submit "Save"%>
          <%end %>
      </div>
